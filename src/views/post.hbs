<div aria-live="polite"
     aria-atomic="true"
     class="spotted-overflow-container bg-body-secondary position-relative rounded-3">
    <div class="toast-container p-3 position-relative placeholder-glow"
         id="toastContainer">
        <div class="toast">
            <div class="toast-header">
                <svg class="rounded me-2 placeholder"
                     width="20"
                     height="20">
                </svg>
            </div>
            <div class="toast-body">
                <span class="placeholder col-6"></span>
                <span class="placeholder w-75"></span>
                <span class="placeholder w-25"></span>
            </div>
        </div>
        <div class="toast">
            <div class="toast-header">
                <svg class="rounded me-2 placeholder"
                     width="20"
                     height="20">
                </svg>
            </div>
            <div class="toast-body">
                <span class="placeholder col-6"></span>
                <span class="placeholder w-75"></span>
                <span class="placeholder w-25"></span>
            </div>
        </div>
        <div class="toast">
            <div class="toast-header">
                <svg class="rounded me-2 placeholder"
                     width="20"
                     height="20">
                </svg>
            </div>
            <div class="toast-body">
                <svg class="rounded placeholder"
                     width="128"
                     height="128">
                </svg>
            </div>
        </div>
    </div>
</div>
<ul class="nav nav-tabs my-2">
    <li class="nav-item">
        <a id="messageTab"
           class="nav-link active"
           aria-current="page"
           href="#">
            Message
        </a>
    </li>
    <li class="nav-item">
        <a id="imageTab"
           class="nav-link"
           href="#">
            Image
        </a>
    </li>
</ul>
<div class="my-2">
    <div id="messageTabPage"
         class="form-floating">
        <textarea id="contentInput"
                  name="content"
                  class="form-control"
                  placeholder="Enter a message..."
                  aria-label="Enter a message..."
                  aria-describedby="postButton"></textarea>
        <label for="contentInput">Enter a message...</label>
    </div>
    <div id="imageTabPage"
         class="d-none">
        <input id="imageInput"
               class="form-control"
               type="file"
               accept="image/*" />
        <img id="pictureBox"
             src=""
             class="img-thumbnail mt-2"
             width="200"
             height="200"
             alt="Image preview" />
    </div>
</div>
<input id="postButton"
       class="btn btn-primary w-100"
       type="submit"
       value="Post" />
<script type="importmap">
    {
      "imports": {
        "@popperjs/core": "https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/esm/popper.min.js",
        "bootstrap": "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.esm.min.js"
      }
    }
</script>
<script src="/scripts/moment.js"
        type="text/javascript"></script>
<script src="/scripts/post.js"
        type="module"></script>